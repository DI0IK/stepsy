<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="header_personal_data"
        android:title="@string/header_personal_data"
        app:iconSpaceReserved="false">

        <EditTextPreference
            android:key="height"
            android:title="@string/height_cm"
            android:defaultValue="180"
            android:inputType="number"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_height" />

        <EditTextPreference
            android:key="weight"
            android:title="@string/weight_kg"
            android:defaultValue="70"
            android:inputType="number"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_weight" />
</PreferenceCategory>

    <PreferenceCategory
        android:title="@string/header_appearance"
        app:iconSpaceReserved="false">

        <ListPreference
            android:key="language"
            android:title="@string/app_language"
            android:defaultValue="system"
            android:entries="@array/language_names"
            android:entryValues="@array/language_values"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_language" />

        <ListPreference
            android:key="theme"
            android:title="@string/theme"
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_theme" />

        <ListPreference
            android:key="unit_system"
            android:title="@string/unit_system"
            android:defaultValue="metric"
            android:entries="@array/unit_system_entries"
            android:entryValues="@array/unit_system_values"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_unit" />

        <ListPreference
            android:key="date_format"
            android:title="@string/date_format"
            android:defaultValue="yyyy-MM-dd"
            android:entries="@array/date_format_options"
            android:entryValues="@array/date_format_values"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_dateformat" />

        <ListPreference
            android:key="first_day_of_week"
            android:title="@string/first_day_of_the_week"
            android:defaultValue="2"
            android:entries="@array/weekdays"
            android:entryValues="@array/weekdays_values"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_firstday" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/header_data_backup"
        app:iconSpaceReserved="false">

        <Preference
            android:key="import"
            android:title="@string/import_data"
            app:icon="@drawable/ic_import" />

        <Preference
            android:key="export"
            android:title="@string/export_data"
            app:icon="@drawable/ic_export" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/header_prometheus_settings"
        app:iconSpaceReserved="false">

        <EditTextPreference
            android:key="prometheus_push_url"
            android:title="@string/prometheus_push_url"
            android:defaultValue="http://your-prometheus-pushgateway-url:9091"
            android:inputType="textUri"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_url" />

        <EditTextPreference
            android:key="prometheus_auth_username"
            android:title="@string/prometheus_auth_username"
            android:defaultValue=""
            android:inputType="text"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_username" />

        <EditTextPreference
            android:key="prometheus_auth_password"
            android:title="@string/prometheus_auth_password"
            android:defaultValue=""
            android:inputType="textPassword"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_password" />

        <EditTextPreference
            android:key="prometheus_bearer_token"
            android:title="@string/prometheus_bearer_token"
            android:defaultValue=""
            android:inputType="text"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_token" />

        <SwitchPreferenceCompat
            android:key="prometheus_use_ssl"
            android:title="@string/prometheus_use_ssl"
            android:defaultValue="false"
            app:icon="@drawable/ic_ssl" />
    </PreferenceCategory>
</PreferenceScreen>
